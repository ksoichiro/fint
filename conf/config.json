{
  "rulesets" : [
    {
      "id": "objc",
      "description": "Objective-C",
      "pattern": ".*\\.(m|mm|h)$",
      "modules": [
        {
          "id": "pattern_match",
          "rules": [
            {
              "pattern": "else{",
              "message": {
                "default": "Space must be inserted after else",
                "ja": "elseの後にはスペースを入れてください"
              }
            },
            {
              "pattern": "}else",
              "message": {
                "default": "Space must be inserted before else",
                "ja": "elseの前にはスペースを入れてください"
              }
            },
            {
              "pattern": "if(",
              "message": {
                "default": "Space must be inserted before if",
                "ja": "ifの後にはスペースを入れてください"
              }
            },
            {
              "pattern": "){",
              "message": {
                "default": "Space must be inserted between ')' and '{'",
                "ja": "')'と'{'の間にはスペースを入れてください"
              }
            },
            {
              "pattern": ",[^ $]",
              "message": {
                "default": "Space must be inserted after ','",
                "ja": "','の後にはスペースを入れてください"
              }
            }
          ]
        },
        {
          "id": "max_length",
          "rules": [
            {
              "pattern": ".*",
              "args": [80],
              "message": {
                "default": "Too long line. max length=%d",
                "ja": "1行の長さが%d文字を超えています"
              }
            }
          ]
        }
      ]
    }
  ]
}
