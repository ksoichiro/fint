{
  "rulesets": [
    {
      "id": "ObjectiveCSource",
      "description": "Objective-C",
      "modules": [
        {
          "id": "pattern_match",
          "pattern": ".*\\.(m|mm|h)$",
          "rules": [
            {"id": "WhitespaceAfterElse", "args": ["else{", "", "else {"]},
            {"id": "WhitespaceBeforeElse", "args": ["}else", "", "} else"]},
            {"id": "WhitespaceAfterIf", "args": ["if\\(", "", "if ("]},
            {"id": "WhitespaceAfterFor", "args": ["for\\(", "", "for ("]},
            {"id": "WhitespaceAfterEqualOperator", "args": ["^([^/]*|[^/]*/[^/]*)=([^ ])", "", "$1= $2"]},
            {"id": "WhitespaceBeforeEqualOperator", "args": ["^([^/]*|[^/]*/[^/]*)([^ <>=!+\\-])=", "", "$1$2 ="]},
            {"id": "NoWhitespaceAfterOpenParenthesis", "args": ["\\( +([^\\(])", "", "($1"]},
            {"id": "NoWhitespaceBeforeCloseParenthesis", "args": ["([^\\)]) +\\)", "", "$1)"]},
            {"id": "NoWhitespaceBeforeSemicolon", "args": ["^([^/ ]+|[^/]*/[^/]*) ;", "", "$1;"]},
            {"id": "WhitespaceBetweenParAndBrace", "args": ["\\){", ") {", ""]},
            {"id": "WhitespaceAfterComma", "args": ["^(.*),([^ $])", "(//|@\"[^\"]*,[^ $]).*", "$1, $2"]},
            {"id": "WhitespaceAtStartOfComment", "args": ["(^|[^\"]+)//([^/ ])", "//.*//", "$1// $2"]},
            {"id": "WhitespaceBetweenBracketAndMessage", "args": ["\\]([a-zA-Z0-9_])", "", "] $1"]},
            {"id": "TrailingWhitespace", "args": ["([^ ]+) +$", "", "$1"]}
          ]
        },
        {
          "id": "indent",
          "pattern": ".*\\.(m|mm|h)$",
          "rules": [
            {"id": "Whitespaces", "args": [4]}
          ]
        },
        {
          "id": "max_length",
          "pattern": ".*\\.(m|mm|h)$",
          "rules": [
            {"id": "ExceedMaxLength", "args": [".*", 80]}
          ]
        }
      ]
    }
  ]
}
